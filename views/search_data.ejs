<%  if(noResult == true){ %>
    <div class="card mx-3">
        <h5 class="card-header text-center">Sorry</h5>
        <div class="card-body">
          <h5 class="card-title text-center">Trip not found</h5>
        
          
        </div>
      </div>
    <% } %>
<% result.forEach((data) => {   %>
<div class="card mx-3">
    <h5 class="card-header"><%= data.start_location %> to <%= data.end_location %></h5>
    <div class="card-body">
      <h5 class="card-title">Departure Date : <%= data.departure_date %></h5>
      <h6 class="card-title">Price : <%=data.price %></h6>
      <h6 class="card-title">BUS : <%= data.bus_id %></h6>
      <p class="card-text">
        <% if(data.start_location == 'Yangon'){ %>
            Yangon - Ann - Minbya - Mrauk U - Kyaut Taw - Ponnagyun - Sittwe 
        <% }else if(data.start_location == 'Sittwe'){ %>
                Sittwe - Ponnagyun - Kyaut Taw - Mrauk U - Minbya - Ann - Yangon
        <% } %>

        </p>
      <a href="/user/register/<%=data.route_id%>" class="btn btn-primary" >Book</a>
    </div>
  </div>
  <% }) %>
