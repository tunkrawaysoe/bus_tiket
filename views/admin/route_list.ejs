<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="/DataTables/datatables.min.css">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <script src="/DataTables/jQuery-3.7.0/jquery-3.7.0.min.js"></script>
  <style>
    /* Set height of the grid so .sidenav can be 100% (adjust if needed) */
    .row.content {height: 1500px}
    
    /* Set gray background color and 100% height */
    .sidenav {
      background-color: #f1f1f1;
      height: 100%;
    }
    
    /* Set black background color, white text and some padding */
    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
    
    /* On small screens, set height to 'auto' for sidenav and grid */
    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 15px;
      }
      .row.content {height: auto;} 
    }
  </style>
</head>
<body>

<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav justify-content-center">
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
          <span class="fs-4"> Travel U </span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/admin/bus/lists" class="nav-link link-dark">
              Bus List
            </a>
          </li>
          <li>
            <a href="/admin/route/addition" class="nav-link link-dark">
              Add Route
            </a>
          </li>
          <li>
            <a href="/admin/route/list" class="nav-link active" aria-current="page">
              Route List
            </a>
          </li>
          <li>
            <a href="/admin/user/list" class="nav-link link-dark">
              Booking List
            </a>
          </li>
        
        </ul>
        <hr>
       
      </div>
    
      
    </div>

    <div class="col-sm-9">
        <h2> Route List</h2>
        <div class="p-4">
            <table id="route_list" class=" display table  table-striped w-100">
                <thead>
                    <tr>
     
                        <th> start_location</th>
                        <th>end_location</th>
                        <th>price</th>
                        <th>departure_time</th>
                        <th>departure_date</th>
                        <th>bus_number</th>
                    </tr>
                    
                </thead>
                <tbody>
                    <% result.forEach((data) => {   %> 
                    <tr>
                        <td><%=data.start_location%></td>
                        <td><%=data.end_location%></td>
                        <td><%=data.price%></td>
                        <td><%=data.departure_time%></td>
                        <td><%=data.departure_date%></td>
                        <td><%=data.bus_number%></td>
                        
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="container-fluid">
  <p>Footer Text</p>
</footer>

<script src="/DataTables/datatables.min.js"></script>
<script>
    let table = new DataTable('#route_list', {
    // config options...
    });
</script>
   
</body>
</html>